<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:sweet="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_3dp"
        android:layout_marginRight="@dimen/size_3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobileNoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="Mobile"
                    android:textColor="@color/dark_purple"
                    android:textSize="12dp" />

                <AutoCompleteTextView
                    android:id="@+id/mobileNoAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_shape_bg"
                    android:digits="0123456789"
                    android:dropDownAnchor="@+id/customAnchorHeightTextView"
                    android:dropDownWidth="match_parent"
                    android:dropDownHeight="180dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Mobile"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="10"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="Name"
                    android:textColor="@color/dark_purple"
                    android:textSize="12dp" />

                <AutoCompleteTextView
                    android:id="@+id/nameAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_shape_bg"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                    android:dropDownAnchor="@+id/customAnchorHeightTextView"
                    android:dropDownWidth="match_parent"
                    android:dropDownHeight="180dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:lines="1"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
