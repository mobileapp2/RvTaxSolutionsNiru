                                android:imeOptions="actionNext"
                                android:padding="3dp"
                                android:singleLine="true"
                                android:textColor="#0b5e56"
                                android:textColorHint="@color/gray"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <LinearLayout
