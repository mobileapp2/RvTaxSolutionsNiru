<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout_mainUserList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainLinearLayout_userList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/size_4dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/m8"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="0.2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/salesManListCircleImage"
                    android:layout_width="@dimen/size_60dp"
                    android:layout_height="@dimen/size_60dp"
                    android:layout_gravity="left"
                    android:src="@drawable/usericon" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_4dp"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Recipt Number: "
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/processid_userlist_myapllication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Date"
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Type: "
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/name_userlist_myapllication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Name"
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Date: "
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/date_userlist_myapllication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Date"
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Amount: "
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/amt_userlist_myapllication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Date"
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Payment ID: "
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/paymentid_userlist_myapllication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Date"
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Transaction ID: "
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/transactionid_userlist_myapllication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Date"
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Payments Status: "
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/status_userlist_myapllication"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="@dimen/m5"
                    android:text="Date"
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Message from CA: "
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/replay_msg_userlist_myapllication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Date"
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Document from CA: "
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/replay_doc_userlist_myapllication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m5"
                    android:text="Date"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size13"
                    android:textStyle="bold" />
            </LinearLayout>








        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
