<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="7dp"
        android:layout_centerInParent="true">

        <com.github.florent37.shapeofview.shapes.CircleView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#DAE0E2"
            android:elevation="0dp"
            app:shape_circle_borderColor="@android:color/black"
            app:shape_circle_borderWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DAE0E2"
                android:gravity="center">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/fileTypeIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#DAE0E2"
                    app:civ_border_color="#DAE0E2"
                    app:civ_circle_color="#DAE0E2"
                    android:src="@drawable/music_icon_dark_gray" />

            </LinearLayout>

        </com.github.florent37.shapeofview.shapes.CircleView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/filenameFullTv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="7dp"
                android:text="Cassy Neistat Vlog 209 - Costa Rica Island"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/fileStatusTv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily=""
                android:gravity="top"
                android:paddingStart="7dp"
                android:text="Featuring Mumbiker Nikkhil wih Rajat Sharma.." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">-->

            <ImageView
                android:id="@+id/shareOrDownloadIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                 />

            <!--        </LinearLayout>-->

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#c0c0c0"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>





































