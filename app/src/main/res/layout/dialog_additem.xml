<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/size_5dp"
            android:background="@drawable/shape"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_shape">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m10"
                    android:text="Title"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/closeImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:padding="13dp"
                    android:src="@drawable/close_new" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/patientDataRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginBottom="15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/m8"
                        android:text="Name *"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m12" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/itemNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_shape"
                            android:gravity="center_horizontal"
                            android:hint="Name"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:padding="@dimen/m8"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size12" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/m8"
                        android:text="Type"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m12" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/itemTypeEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_shape"
                            android:gravity="center_horizontal"
                            android:hint="Type"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:padding="@dimen/m8"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size12" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/m8"
                        android:text="Brand"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m12" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/itemBrandEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_shape"
                            android:gravity="center_horizontal"
                            android:hint="Brand"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:padding="@dimen/m8"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size12" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/m8"
                        android:text="Group"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m12" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/itemGroupEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_shape"
                            android:gravity="center_horizontal"
                            android:hint="Group"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:padding="@dimen/m8"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size12" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/m8"
                        android:text="Unit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m12" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/itemUnitEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_shape"
                            android:gravity="center_horizontal"
                            android:hint="Unit"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:padding="@dimen/m8"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size12" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/m8"
                        android:text="Rate"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m12" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/itemRateEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_shape"
                            android:gravity="center_horizontal"
                            android:hint="Rate"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:padding="@dimen/m8"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size12" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/m8"
                        android:text="Tax ( % ) *"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m12" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/itemTaxEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_shape"
                            android:gravity="center_horizontal"
                            android:hint="Tax ( % )"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:padding="@dimen/m8"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size12" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/m8"
                        android:text="MRP *"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m12" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/itemMrpEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_shape"
                            android:gravity="center_horizontal"
                            android:hint="MRP"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"
                            android:padding="@dimen/m8"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size12" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressSubmit_addItemDialog"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/submit_addItemTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/rectanguler_bg"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/m8"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/m13" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
