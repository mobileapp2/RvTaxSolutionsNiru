<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed">

    <ScrollView
        android:id="@+id/ptec_mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="20dp"
                android:text="PROFESSIONAL TAX REGISTRATION"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="5dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="Full Name"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/full_name_ptec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rectanguler_bg"
                android:hint="Full Name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="17dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="Mobile no"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/mobile_no_ptec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rectanguler_bg"
                android:hint="Mobile"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="17dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="Address"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/address_ptec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rectanguler_bg"
                android:hint="Address"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="17dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="Email"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/email_ptec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rectanguler_bg"
                android:hint="Email"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="17dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="Pan Number"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/pancard_ptec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rectanguler_bg"
                android:hint="Pan Number"
                android:imeOptions="actionDone"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="17dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="Aadhar Number"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/aadharcard_ptec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rectanguler_bg"
                android:hint="Aadhar Number"
                android:inputType="phone"
                android:maxLength="12"
                android:maxLines="1"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="17dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="Select Business Nature"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />


            <LinearLayout
                android:id="@+id/BnatureLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="left|center_vertical|center_horizontal|center"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/BnatureRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/BnatureLinearLayout">



                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/businessnaturespinner_ptec"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/edittext_rectanguler_bg"
                        android:hint="Business Nature"
                        android:imeOptions="actionNext"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textColor="@color/dark_purple"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/size_14dp"
                        >

                    </com.toptoche.searchablespinnerlibrary.SearchableSpinner>

                    <ProgressBar
                        android:id="@+id/progress_BnatureSpinner_ptec"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="10dp"
                        android:visibility="gone" />

                </RelativeLayout>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="17dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="Date Of Establishment"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/establishment_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rectanguler_bg"
                android:hint="Select Date"
                android:maxLines="1"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textSize="14dp" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="17dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="GST Number"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/gst_number_ptec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rectanguler_bg"
                android:hint="GST Number"
                android:maxLines="1"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="17dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="Enter Bank IFSC Code *"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/ptec_bank_ifsc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rectanguler_bg"
                android:hint="Bank IFSC Code"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="17dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="Bank Account Number *"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/ptec_account_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rectanguler_bg"
                android:hint="Bank Account Number"
                android:maxLines="1"
                android:inputType="phone"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textSize="14dp" />



            <LinearLayout
                android:id="@+id/GSTTYPELinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="left|center_vertical|center_horizontal|center"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/GSTTYPERelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/GSTTYPELinearLayout">



                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/GSTTYPEspinner_ptec"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/edittext_rectanguler_bg"
                        android:hint="GST TYPE"
                        android:imeOptions="actionNext"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textColor="@color/dark_purple"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/size_14dp"
                        >

                    </com.toptoche.searchablespinnerlibrary.SearchableSpinner>

                    <ProgressBar
                        android:id="@+id/progress_ptecTYPESpinner_ptec"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="10dp"
                        android:visibility="gone" />

                </RelativeLayout>
            </LinearLayout>


        <LinearLayout
            android:id="@+id/GSTPLANDESC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:orientation="vertical"
            android:layout_marginRight="1dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_rectangular"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:visibility="gone">

            <TextView
                android:id="@+id/GSTTYPEPLAN_AMT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="17dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="-"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/GSTTYPEPLAN_DESC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="17dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="-"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />


        </LinearLayout>


            <TextView
                android:id="@+id/GST_view_doc_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="17dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="Required Document List(Click Here)"
                android:textColor="@color/colorPrimary"

                android:textSize="13sp" />






            <Button
                android:id="@+id/ptec_submit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectanguler_bg"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_ptecmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone" />

</RelativeLayout>
