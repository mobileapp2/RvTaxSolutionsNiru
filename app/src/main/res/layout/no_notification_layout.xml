<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/noNotificationLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:visibility="gone">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/noNotificationRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/notificationImage"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_centerInParent="true"
                android:src="@drawable/no_notification_illustration" />

            <TextView
                android:id="@+id/messageTv"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/notificationImage"
                android:layout_centerInParent="true"
                android:layout_marginBottom="35dp"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                android:text="You have no pending request !"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp" />

            <Button
                android:id="@+id/recheckButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/notificationImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/edtxshape_button"
                android:text="Recheck"
                android:textAllCaps="false"
                android:textColor="@color/primary" />

        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</RelativeLayout>
























